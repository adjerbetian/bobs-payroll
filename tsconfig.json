{
    "compilerOptions": {
        "allowJs": false,
        "module": "commonjs",
        "target": "esnext",
        "sourceMap": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "listEmittedFiles": true,
        "resolveJsonModule": true,
        "baseUrl": "./src/",
        "outDir": "dist/",
        "noEmit": true,
        "paths": {
            "@test/unit": ["../test/unitTest.ts"],
            "@test/integration": ["../test/integrationTest.ts"],
            "@test/e2e": ["../test/e2eTest.ts"]
        }
    },
    "exclude": ["node_modules"]
}
